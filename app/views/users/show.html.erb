<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <div name="profile"><span class="label label-default">email</span><%= @user.email %></div>
        <div name="profile"><span class="label label-default">age</span><%= @user.age %><span id="profile-area" class="label label-default">area</span><%= @user.area %></div>
        <div name="profile"><span class="label label-default">comment</span><%= @user.body %></span></div>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <div class="changes">
      <%= link_to "microposts", @user,{ class: "btn btn-default"} %>
      <%= link_to "followings", followings_path(@user),{ class: "btn btn-default"} %>
      <%= link_to "followers", followers_path(@user),{ class: "btn btn-default"} %>
    </div>
    
    <% if @user.microposts.any? %>
      <h3>Microposts (
      <%= @user.microposts.count %>
        )
      </h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>
